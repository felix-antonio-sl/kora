{
  "_manifest": {
    "urn": "urn:kora:agent-bootstrap:curator-config:2.0.0",
    "type": "bootstrap_config"
  },
  "allowed_kb": [
    "urn:kora:kb:md-spec",
    "urn:kora:kb:spec-md",
    "urn:kora:kb:gobernanza"
  ],
  "sandbox": {
    "mode": "strict"
  },
  "tools": {
    "allow": [
      "catalog_resolve",
      "kb_route",
      "artifact_read",
      "artifact_write",
      "artifact_validate",
      "spec_consult",
      "artifact_list"
    ],
    "deny": []
  },
  "sub_agents": {
    "max_depth": 1,
    "max_concurrent": 3
  },
  "limits": {
    "policy_flags": {
      "require_audit_before_publish": true,
      "require_user_approval_for_deprecation": true
    },
    "quotas": {
      "max_artifact_size_tokens": 50000,
      "max_segments_per_artifact": 20
    }
  }
}
