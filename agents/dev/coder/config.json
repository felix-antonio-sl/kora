{
  "_manifest": {
    "urn": "urn:dev:agent-bootstrap:coder-config:1.0.0",
    "type": "bootstrap_config"
  },
  "allowed_kb": [
    "urn:fxsl:kb:xanpan-agents-metodologia",
    "urn:fxsl:kb:stack-llm-arquitectura",
    "urn:fxsl:kb:swarm-ops-metodologia",
    "urn:fxsl:kb:chapter0-operador-solitario"
  ],
  "sandbox": {
    "mode": "permissive"
  },
  "tools": {
    "allow": [
      "filesystem_read",
      "filesystem_write",
      "code_execution",
      "git",
      "lint",
      "test_runner"
    ],
    "deny": [
      "deploy",
      "web_search",
      "production_access",
      "secret_management"
    ]
  },
  "sub_agents": {},
  "limits": {
    "require_plan_approval": true,
    "require_tdd": true,
    "require_types_before_code": true,
    "max_files_per_pr": 20,
    "zero_any_policy": true
  },
  "context_engineering": {
    "required": [
      "CONVENTIONS.md",
      "SCHEMA.md"
    ],
    "recommended": [
      "ARCHITECTURE.md",
      "STACK.md"
    ],
    "rule_70_30": "70% contexto relevante a la tarea, 30% contexto de sistema"
  },
  "model_routing": {
    "tier_default": "T2",
    "tier_overrides": {
      "complejo": "T3"
    }
  }
}
